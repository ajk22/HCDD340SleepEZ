<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SleepEZ" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_main</item>
        <item name="colorPrimaryVariant">@color/teal_main</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_main</item>
        <item name="colorSecondaryVariant">@color/teal_main</item>
        <item name="colorOnSecondary">@color/teal_main</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SleepEZ.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="colorPrimary">@color/teal_main</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/light_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:itemBackground">@color/grey_background</item>
    </style>

    <style name="Theme.SleepEZ.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

</resources>